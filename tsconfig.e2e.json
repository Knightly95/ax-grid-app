{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "@playwright/test"],
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force"
  },
  "include": ["e2e/**/*.ts", "playwright.config.ts"]
}
